{
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false, // Allow implicit any for untyped parameters
    "noEmitOnError": false,
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "src/types/**/*", "types/**/*", "public/assets"],
  "exclude": ["node_modules"]
}
